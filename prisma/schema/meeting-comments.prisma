model MeetingComment {
  id              String      @id @default(uuid())
  content         String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  meetingNoteId   String
  meetingNote     MeetingNote @relation(fields: [meetingNoteId], references: [id], onDelete: Cascade)

  authorId        String
  author          User        @relation(fields: [authorId], references: [id])

  parentId        String?
  parent          MeetingComment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies         MeetingComment[] @relation("CommentReplies")

  resolved        Boolean     @default(false)
  from            Int?
  to              Int?
  
  editorDataCommentId String?
  type            TypeMeetingPage @default(before)    
  
}

enum TypeMeetingPage {
  after
  before
}