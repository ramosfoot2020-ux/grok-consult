model Invite {
  id         String    @id @default(uuid())
  email      String?
  role       Roles
  companyId  String
  link       String?
  validUntil DateTime
  rejectedAt DateTime?
  acceptedAt DateTime?
  type       InviteTypes
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  company    Company   @relation(fields: [companyId], references: [id])
}

enum InviteTypes {
  email
  link
}